{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "server/index.ts": {
      "includeFiles": [
        "dist/**",
        "dist/public/**",
        "dist/public/**/*"
      ]
    }
  },
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "dist/public/**",
          "dist/public/**/*"
        ],
        "runtime": "nodejs18.x",
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/server/index.ts"
    }
  ]
}
